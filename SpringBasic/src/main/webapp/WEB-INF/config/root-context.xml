<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xmlns:mybatis-spring="http://mybatis.org/schema/mybatis-spring"
	xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.3.xsd
		http://mybatis.org/schema/mybatis-spring http://mybatis.org/schema/mybatis-spring-1.2.xsd
		http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 외부 설정 파일을 읽어서 사용할 수 있도록 해주는 클래스 -->
	<!-- classpath:/ 는 src/main/resourse 폴더아래에 있는 파일을 참조할 수있습니다 -->
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">

		<property name="location"
			value="classpath:/db-config/Hikari.properties"></property>
	</bean>


	<!-- 데이터베이스 관련작업(디스패쳐서블릿 이전에 만들어지는 bean) -->
	<!-- 1. namespace에서 jdbc만 추가 -->

	<!-- 히카리 설정파일 빈 -->
	<bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
		<property name="driverClassName"
			value="${ds.driverClassName}" />
		<property name="jdbcUrl" value="${ds.jdbcUrl}" /><!-- 엔드포인트 :xe 
			(11g) /XEPDB1 (18c) -->
		<property name="username" value="${ds.username}" />
		<property name="password" value="${ds.password}" />
	</bean>

	<!-- 히카리 풀(위에 설정파일을 주입) -->
	<bean id="ds" class="com.zaxxer.hikari.HikariDataSource">
		<constructor-arg ref="hikariConfig" />
	</bean>

	<!-- 스프링에서 제공하는 스프링JDBCTemplate객체 -->
	<bean id="jdbcTemplate"
		class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="ds" />
	</bean>

	<!-- 마이바티스 핵심객체 생성 -->
	<!-- setter 주입으로 히카리풀을 주입 -->
	<bean  id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="ds"/>
		<!-- 마이바티스 의 구현체 mapper 을 묶어서 관리하기 위한 경로 설정 -->
		 <property name="mapperLocations" value="classpath:/sqlmap/*.xml"/>
		 <!-- 마이바티스의 부가적인 설정파일 위치 -->
		 <property name="configLocation" value="classpath:/mybatis-config/mybatis-config.xml"/>
	</bean>
	
	<!-- 맵퍼 인터페이스의 경로를 지정 -->
	<mybatis-spring:scan base-package="com.simple.test.mapper"/>
	<mybatis-spring:scan base-package="com.simple.mapper"/>

</beans>